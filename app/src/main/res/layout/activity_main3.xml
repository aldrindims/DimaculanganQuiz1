<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    tools:context="com.example.dimaculangan.dimaculanganquiz1.Main2Activity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/nougat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nougat"
        android:textSize="20dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="ver. 7.0 - 7.1.2"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:text="api 24 - 25"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:text="Released date: August 22, 2016"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="25dp"
        android:background="@android:color/darker_gray"
        android:onClick="homePage"
        android:text="Home" />

    <Button
        android:id="@+id/page1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home_btn"
        android:layout_alignBottom="@+id/home_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/home_btn"
        android:layout_toRightOf="@+id/home_btn"
        android:background="@android:color/darker_gray"
        android:onClick="firstPage"
        android:text="1" />

    <Button
        android:id="@+id/page2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignBaseline="@+id/home_btn"
        android:layout_alignBottom="@+id/home_btn"
        android:layout_toRightOf="@+id/page1"
        android:layout_toEndOf="@+id/page1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="30dp"
        android:onClick="secondPage"
        android:enabled="false"/>

    <Button
        android:id="@+id/page3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home_btn"
        android:layout_alignBottom="@+id/home_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/page2"
        android:layout_toRightOf="@+id/page2"
        android:background="@android:color/darker_gray"
        android:onClick="thirdPage"
        android:text="3" />

</RelativeLayout>
